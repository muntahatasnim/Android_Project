<?xml version = "1.0" encoding = "utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/new_back"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/bname"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:focusable="true"
        android:hint="Brand Name"
        android:textColorHint="#000000"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/gname"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/bname"
        android:layout_alignEnd="@+id/bname"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bname"
        android:layout_alignParentLeft="true" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColorHint="#000000"
        android:layout_alignBottom="@+id/gname"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Generic Name"
        android:textSize="30dp"
        android:layout_alignParentLeft="true" />
    <EditText
        android:id="@+id/availin"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/gname"
        android:layout_alignEnd="@+id/gname"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/gname"
        android:layout_alignParentLeft="true" />
    <EditText

        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColorHint="#000000"
        android:layout_alignBottom="@+id/availin"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Available In"
        android:textSize="30dp"
        android:layout_alignParentLeft="true" />


    <EditText
        android:id="@+id/stock"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/availin"
        android:layout_alignEnd="@+id/availin"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/availin"
        android:layout_alignParentLeft="true" />
    <EditText

        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColorHint="#000000"
        android:layout_alignBottom="@+id/stock"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Stock"
        android:textSize="30dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/add_medicine"
        android:layout_width="231dp"
        android:layout_height="91dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="#008B8B"
        android:text="Add medicine"
        android:textColor="#000000"
        android:textSize="30dp" />
</RelativeLayout>
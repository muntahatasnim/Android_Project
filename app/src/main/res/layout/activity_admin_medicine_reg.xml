<?xml version = "1.0" encoding = "utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/new_back"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/small_logo"
        android:background="#008B8B"/>

    <EditText
        android:id="@+id/brand_name"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:focusable="true"
        android:hint="Brand Name"
        android:textColorHint="#000000"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/generic"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/brand_name"
        android:layout_alignEnd="@+id/brand_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/brand_name" />


    <EditText

        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColorHint="#000000"
        android:layout_alignBottom="@+id/generic"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Phone no"
        android:inputType="phone"
        android:textSize="30dp"
        android:layout_alignParentLeft="true" />


    <EditText
        android:id="@+id/available"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/generic"
        android:layout_alignEnd="@+id/generic"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/generic"
        android:layout_alignParentLeft="true" />


    <EditText

        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColorHint="#000000"
        android:layout_alignBottom="@+id/available"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:hint="Available In"
        android:textSize="30dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/add_medicine"
        android:layout_width="231dp"
        android:layout_height="91dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="#008B8B"
        android:text="Add medicine"
        android:textColor="#000000"
        android:textSize="30dp" />

</RelativeLayout>